<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>YouVersionSharp</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Title>YouVersionSharp</Title>
    <Authors>markivan.basto</Authors>
    <Description>Wrapper for the YouVersion Developer API</Description>
    <Copyright>(c) 2020 Mark Ivan Basto</Copyright>
    <PackageProjectUrl>https://github.com/MarkIvanDev/YouVersionSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MarkIvanDev/YouVersionSharp.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>youversion api c# wrapper verse of the day</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
